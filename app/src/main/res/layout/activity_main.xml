<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.senani.sachith.story2.MainActivity"
    android:background="#efeff1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/head"
        android:background="@drawable/header"
        android:layout_alignParentTop="true"
    >
        <ImageButton
            android:id="@+id/btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/menu"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_below="@+id/head"
        android:layout_marginTop="10dp"
        android:background="#efeff1"
        android:divider="@null"
        android:visibility="invisible"
        ></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#d6d5d5"
        android:id="@+id/load"
        android:visibility="visible"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:lottie_fileName="loading_rainbow.json"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            app:lottie_colorFilter="#848383"
            android:id="@+id/loading_anim"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#d6d5d5"
        android:id="@+id/error"
        android:visibility="invisible"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_again"
            android:text="try again"
            android:textColor="#fff"
            android:background="@drawable/listview_selector2"/>

    </RelativeLayout>





</RelativeLayout>


