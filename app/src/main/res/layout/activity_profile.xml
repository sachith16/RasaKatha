<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.senani.sachith.story2.ProfileActivity"
    android:background="@drawable/prof_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_name"
        android:background="@drawable/textview_bg"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@+id/rl_number">



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="15"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:hint="Name/නම"
            android:textColorHint="#7dffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e6ffffff"
        android:text="ඔබ ලියන රසකතා වල කතෘගේ නම ලෙස යෙදෙන්නේ මෙහිදී ඔබ යොදන නම වේ"
        android:layout_above="@+id/tv_number"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_name"
        android:lineSpacingMultiplier="1.2"
        android:textSize="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_name"
        android:src="@drawable/rasa2"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_number"
        android:background="@drawable/textview_bg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@+id/tv_mandetory"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="10"
            android:hint="Number/07XXXXXXXX"
            android:textColorHint="#7dffffff"
            android:textColor="#fff"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e6ffffff"
        android:text="තෑගි දිනුම් අවස්ථාවන් හිදී ඒවා යොමුවන්නේ මෙම දුරකථන අංකයට බැවින් නිවැරදි අංකයක් යොදන්න"
        android:layout_above="@+id/rl_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_number"
        android:lineSpacingMultiplier="1.2"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e6a31515"
        android:text="*"
        android:layout_above="@+id/save"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="4dp"
        android:layout_alignTop="@+id/tv_mandetory"
        android:id="@+id/tv_star"
        android:lineSpacingMultiplier="1.2"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e6ffffff"
        android:text="රසකතා ලියන්න පෙර නම හා දුරකථන අංකය ඇතුලත් කරන්න"
        android:layout_above="@+id/save"
        android:layout_toRightOf="@+id/tv_star"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tv_mandetory"
        android:lineSpacingMultiplier="1.2"
        android:textSize="12dp"/>


    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/button_selector3"/>

</RelativeLayout>
